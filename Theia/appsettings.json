{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "Data Source=(localdb)\\mssqllocaldb;Initial Catalog=TheiaDB;Integrated Security=True;Pooling=False;MultipleActiveResultSets=True"
  },
  "Security": {
    "DefaultAdmin": {
      "Name": "Default Admin",
      "UserName": "admin@theia.com",
      "Password": "1234aA!"
    },
    "PasswordPolicy": {
      "RequiredLength": 6,
      "RequireDigit": true,
      "RequireLowercase": true,
      "RequireNonAlphanumeric": true,
      "RequireUppercase": true
    },
    "LockOut": {
      "MaxFailedAccessAttempts": 5,
      "DefaultLockoutTimeSpanInMinutes": 5
    },
    "SignIn": {
      "RequireConfirmedEmail": true
    }
  }
}
