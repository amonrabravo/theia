@model IEnumerable<VariantGroup>
@{
    var entityName = "Varyant Gurubu";
    ViewData["Title"] = $"{entityName} Tanımları";
}

<div class="card card-primary">
    <div class="card-header d-flex">
        <div class="flex-fill">
            <i class="fa fa-list"></i>
            @entityName Listesi
        </div>
        <div>
            <a asp-action="Create" class="btn btn-link py-1 text-secondary text-decoration-none">
                <i class="fa fa-plus"></i> Yeni @entityName
            </a>
        </div>
    </div>
    <div class="card-body">
        <table id="dataTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th style="width: 50%">@Html.DisplayNameFor(_ => _.Name)</th>
                    <th class="d-none d-md-table-cell" style="width: 10%">@Html.DisplayNameFor(_ => _.Enabled)</th>
                    <th class="d-none d-md-table-cell" style="width: 10%">@Html.DisplayNameFor(_ => _.Date)</th>
                    <th class="d-none d-md-table-cell" style="width: 10%">@Html.DisplayNameFor(_ => _.User.Name)</th>
                    <th class="d-none d-md-table-cell" style="width: 10%">@Html.DisplayNameFor(_ => _.SortOrder)</th>
                    <th style="width: 10%"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var variantGroup in Model)
                {
                    <tr>
                        <td>
                            @variantGroup.Name
                        </td>
                        <td class="d-none d-md-table-cell">
                            @if (variantGroup.Enabled)
                            {
                                <i class="fa fa-check text-success"></i>
                            }
                            else
                            {
                                <i class="fa fa-times text-danger"></i>
                            }
                        </td>
                        <td class="d-none d-md-table-cell">
                            @variantGroup.Date.ToShortDateString()
                        </td>
                        <td class="d-none d-md-table-cell">
                            @variantGroup.User.Name
                        </td>
                        <td class="text-center d-none d-md-table-cell">
                            <a asp-action="MoveUp" asp-route-id="@variantGroup.Id" class="text-secondary mr-2">
                                <i class="fa fa-caret-up"></i>
                            </a>
                            <a asp-action="MoveDn" asp-route-id="@variantGroup.Id" class="text-secondary mr-2">
                                <i class="fa fa-caret-down"></i>
                            </a>
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@variantGroup.Id" class="text-secondary mr-2">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a asp-action="Remove" asp-route-id="@variantGroup.Id" data-name="@variantGroup.Name" class="text-secondary remove-btn">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts{
    <partial name="_DataTablesPartial" />
    <script>
            $(() => {
                $('#dataTable').DataTable({
                    "order": [[4, "asc"]]
                });

                $('.remove-btn').on('click', function () {
                    const name = $(this).attr('data-name');
                    const href = $(this).attr('href');
                    removeConfirm.fire({
                        text: name + ' isimli @entityName.ToLower() TAMAMEN silinecektir. Silme işlemine devam etmek istiyormusunuz?'
                    })
                        .then(result => {
                            if (result.value) {
                                window.location = href;
                            }
                        });
                    return false;
                });
            });
    </script>
}
