@model Product
@{
    var entityName = "Ürün";
    ViewData["Title"] = $"{entityName} Ekleme";
}

<div class="card card-primary">
    <div class="card-header d-flex">
        <div class="flex-fill">
            <i class="fa fa-list"></i>
            @entityName Ekleme Formu
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="general-tab" data-toggle="tab" href="#general" role="tab">Genel</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="descriptions-tab" data-toggle="tab" href="#descriptions" role="tab">Açıklamalar</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="picture-tab" data-toggle="tab" href="#picture" role="tab">Fotoğraf</a>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active border border-top-0 p-2" id="general" role="tabpanel">
                    <partial name="CreateOrUpdateGeneral" model="Model" />
                </div>
                <div class="tab-pane fade border border-top-0 p-2" id="descriptions" role="tabpanel">
                    <partial name="CreateOrUpdateDescriptions" model="Model" />
                </div>
                <div class="tab-pane fade border border-top-0 p-2" id="picture" role="tabpanel">
                    <partial name="CreateOrUpdatePicture" model="Model" />
                </div>
            </div>
            <hr />
            <a asp-action="Index" class="mr-2">İptal</a>
            <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Kaydet</button>
        </form>
    </div>
</div>
@section head {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
}
@section scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>
    <script>
        $(() => {

            $('#BrandId').select2({
                'theme': 'bootstrap4'
            });

            $('textarea').summernote({
                'height': '400px'
            });

            $('#PictureFilePreview').click(function () { $('#PictureFile').click() });

            $('#PictureFile').change(function (e) {
                var fileReader = new FileReader();
                fileReader.onload = function () {
                    $('#PictureFilePreview').attr('src', fileReader.result);
                };
                fileReader.readAsDataURL(e.target.files[0]);
            });
        });
    </script>
}