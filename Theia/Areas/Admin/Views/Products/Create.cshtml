@model Product
@{
    var entityName = "Ürün";
    ViewData["Title"] = $"{entityName} Ekleme";
}

<div class="card card-primary">
    <div class="card-header d-flex">
        <div class="flex-fill">
            <i class="fa fa-list"></i>
            @entityName Ekleme Formu
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <ul class="nav nav-tabs" id="productTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="general-tab" data-toggle="tab" href="#general" role="tab"><i class="fa fa-tag"></i> Genel</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="categories-tab" data-toggle="tab" href="#categories" role="tab"><i class="fa fa-cubes"></i> Kategoriler</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="descriptions-tab" data-toggle="tab" href="#descriptions" role="tab"><i class="fa fa-file-text"></i> Açıklamalar</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="picture-tab" data-toggle="tab" href="#picture" role="tab"><i class="fa fa-image"></i> Fotoğraf</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="pictureGallery-tab" data-toggle="tab" href="#pictureGallery" role="tab"><i class="fa fa-images"></i> Fotoğraf Galerisi</a>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active border border-top-0 p-2" id="general" role="tabpanel">
                    <partial name="CreateOrUpdateGeneral" model="Model" />
                </div>
                <div class="tab-pane fade border border-top-0 p-2" id="categories" role="tabpanel">
                    <partial name="CreateOrUpdateCategories" model="Model" />
                </div>
                <div class="tab-pane fade border border-top-0 p-2" id="descriptions" role="tabpanel">
                    <partial name="CreateOrUpdateDescriptions" model="Model" />
                </div>
                <div class="tab-pane fade border border-top-0 p-2" id="picture" role="tabpanel">
                    <partial name="CreateOrUpdatePicture" model="Model" />
                </div>
                <div class="tab-pane fade border border-top-0 p-2" id="pictureGallery" role="tabpanel">
                    <partial name="CreateOrUpdatePictureGallery" model="Model" />
                </div>
            </div>
            <hr />
            <a asp-action="Index" class="mr-2">İptal</a>
            <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Kaydet</button>
        </form>
    </div>
</div>
@section head {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
}
@section scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>
    <script>
        $(() => {

            $('#BrandId').select2({
                'theme': 'bootstrap4',
            });

            $('#SelectedCategoryIds').select2({
                'theme': 'bootstrap4',
            });

            $('#Descriptions').summernote({
                'height': '400px'
            });

            $('#PictureFilePreview').click(function () { $('#PictureFile').click() });

            $('#PictureFile').change(function (e) {
                var fileReader = new FileReader();
                fileReader.onload = function () {
                    $('#PictureFilePreview').attr('src', fileReader.result);
                };
                fileReader.readAsDataURL(e.target.files[0]);
            });

            $('#PictureFiles').change(function (e) {
                $('#PictureFilePreviews').html('');
                for (var i = 0; i < e.target.files.length; i++) {
                    var fileReader = new FileReader();
                    fileReader.onload = function (evt) {
                        $('#PictureFilePreviews').append(`
                         <div class="p-2">
                            <div class="card shadow-sm">
                                <img src="`+ evt.target.result + `" class="img-card-top" />
                                <div class="card-body text-center">
                                
                                </div>
                            </div>
                        </div>
                        `);
                    };
                    fileReader.readAsDataURL(e.target.files[i]);
                }
            });
        });
    </script>
}