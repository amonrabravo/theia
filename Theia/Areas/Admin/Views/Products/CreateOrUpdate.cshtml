        <partial name="CreateOrUpdateCategories" model="Model" />
    </div>
    <div class="tab-pane fade border border-top-0 p-2" id="descriptions" role="tabpanel">
        <partial name="CreateOrUpdateDescriptions" model="Model" />
    </div>
    <div class="tab-pane fade border border-top-0 p-2" id="picture" role="tabpanel">
        <partial name="CreateOrUpdatePicture" model="Model" />
    </div>
    <div class="tab-pane fade border border-top-0 p-2" id="pictureGallery" role="tabpanel">
        <partial name="CreateOrUpdatePictureGallery" model="Model" />
    </div>
</div>
