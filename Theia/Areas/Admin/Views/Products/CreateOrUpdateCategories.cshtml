@model Product
<div class="form-row">
    <div class="col-12 col-md-6">
        @foreach (var category in ViewData["Categories"] as SelectList)
        {
            <div class="form-row">
                <div class="col">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" name="SelectedCategoryIds" id="SelectedCategoryId_@category.Value" value="@category.Value">
                        <label class="custom-control-label" for="SelectedCategoryId_@category.Value">@category.Text</label>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
