@model Category
<ul class="nav nav-tabs" id="categoryTab" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-toggle="tab" href="#general" role="tab"><i class="fa fa-tag"></i> Genel</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="variantGroups-tab" data-toggle="tab" href="#variantGroups" role="tab"><i class="fa fa-code-branch"></i> Varyant Grupları</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="picture-tab" data-toggle="tab" href="#picture" role="tab"><i class="fa fa-image"></i> Fotoğraf</a>
    </li>
    @if (ViewContext.RouteData.Values["action"].ToString() == "Edit")
    {
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="subCategories-tab" data-toggle="tab" href="#subCategories" role="tab"><i class="fa fa-cubes"></i> Alt Kategoriler</a>
        </li>
    }
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active border border-top-0 p-2" id="general" role="tabpanel">
        <partial name="CreateOrUpdateGeneral" model="Model" />
    </div>
    <div class="tab-pane fade border border-top-0 p-2" id="variantGroups" role="tabpanel">
        <partial name="CreateOrUpdateVariantGroups" model="Model" />
    </div>
    <div class="tab-pane fade border border-top-0 p-2" id="picture" role="tabpanel">
        <partial name="CreateOrUpdatePicture" model="Model" />
    </div>
    @if (ViewContext.RouteData.Values["action"].ToString() == "Edit")
    {
        <div class="tab-pane fade border border-top-0 p-2" id="subCategories" role="tabpanel">
            <partial name="CreateOrUpdateSubCategories" model="Model" />
        </div>
    }
</div>
<hr />
@if (Model.ParentId == null)
{
    <a asp-action="Index" class="mr-2">İptal</a>
}
else
{
    <a asp-action="Edit" asp-route-id="@Model.ParentId" class="mr-2">İptal</a>
}
<button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Kaydet</button>