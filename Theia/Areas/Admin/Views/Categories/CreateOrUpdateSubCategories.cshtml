@model Category

<div class="card card-primary mb-2">
    <div class="card-header d-flex" data-toggle="collapse" data-target="#editFormSubItems">
        <div class="flex-fill">
            <i class="fa fa-list"></i>
            @Model.Name Alt Kategori Listesi
        </div>
        <div>
            <a asp-action="Create" asp-route-parentId="@Model.Id" class="btn btn-link py-1 text-secondary text-decoration-none">
                <i class="fa fa-plus"></i> Yeni Alt Kategori
            </a>
        </div>
    </div>
    <div class="card-body collapse show" id="editFormSubItems">
        <table id="dataTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th style="width: 10%">@Html.DisplayNameFor(_ => _.PictureFile)</th>
                    <th style="width: 40%">@Html.DisplayNameFor(_ => _.Name)</th>
                    <th style="width: 10%">@Html.DisplayNameFor(_ => _.Enabled)</th>
                    <th style="width: 10%">@Html.DisplayNameFor(_ => _.Date)</th>
                    <th style="width: 10%">@Html.DisplayNameFor(_ => _.User.Name)</th>
                    <th style="width: 10%">@Html.DisplayNameFor(_ => _.SortOrder)</th>
                    <th style="width: 10%"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.Children.OrderBy(p => p.SortOrder))
                {
                    <tr>
                        <td>
                            <img id="PictureFilePreview" src="@(category.Picture != null ? category.Picture : "/content/images/no-image-320-240.jpg")" alt="@category.Name" height="64" class="border shadow-sm mb-2" />
                        </td>
                        <td>

                            <ul class="breadcrumb p-0 bg-transparent">
                                @{
                                    var pathNames = category.GetPathItems().ToList();
                                    foreach (var categoryParent in pathNames)
                                    {
                                        if (pathNames.LastOrDefault() == categoryParent)
                                        {
                                            <li class="breadcrumb-item active">
                                                @categoryParent.Name
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="breadcrumb-item">
                                                <a asp-action="Edit" asp-route-id="@categoryParent.Id">@categoryParent.Name</a>
                                            </li>
                                        }
                                    }
                                }
                            </ul>
                        </td>
                        <td>
                            @if (category.Enabled)
                            {
                                <i class="fa fa-check text-success"></i>
                            }
                            else
                            {
                                <i class="fa fa-times text-danger"></i>
                            }
                        </td>
                        <td>
                            @category.Date.ToShortDateString()
                        </td>
                        <td>
                            @category.User.Name
                        </td>
                        <td class="text-center">
                            <a asp-action="MoveUp" asp-route-id="@category.Id" class="text-secondary mr-2">
                                <i class="fa fa-caret-up"></i>
                            </a>
                            <a asp-action="MoveDn" asp-route-id="@category.Id" class="text-secondary mr-2">
                                <i class="fa fa-caret-down"></i>
                            </a>
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@category.Id" class="text-secondary mr-2">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a asp-action="Remove" asp-route-id="@category.Id" data-name="@category.Name" class="text-secondary remove-btn">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
