@model Category
@{
    var entityName = "Kategori";
    ViewData["Title"] = $"{entityName} Güncelleme";
}

<div class="card card-primary mb-2">
    <div class="card-header d-flex" data-toggle="collapse" data-target="#editFormCardBody">
        <div class="flex-fill">
            <i class="fa fa-list"></i>
            @entityName Güncelleme Formu
        </div>
    </div>
    <div class="card-body collapse show" id="editFormCardBody">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="Date" />
            <input type="hidden" asp-for="SortOrder" />
            <input type="hidden" asp-for="ParentId" />
            <input type="hidden" asp-for="Picture" />

            <ul class="nav nav-tabs" id="productTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="general-tab" data-toggle="tab" href="#general" role="tab"><i class="fa fa-tag"></i> Genel</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="variantGroups-tab" data-toggle="tab" href="#variantGroups" role="tab"><i class="fa fa-code-branch"></i> Varyant Grupları</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="picture-tab" data-toggle="tab" href="#picture" role="tab"><i class="fa fa-image"></i> Fotoğraf</a>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active border border-top-0 p-2" id="general" role="tabpanel">
                    <partial name="CreateOrUpdateGeneral" model="Model" />
                </div>
                <div class="tab-pane fade border border-top-0 p-2" id="variantGroups" role="tabpanel">
                    <partial name="CreateOrUpdateVariantGroups" model="Model" />
                </div>
                <div class="tab-pane fade border border-top-0 p-2" id="picture" role="tabpanel">
                    <partial name="CreateOrUpdatePicture" model="Model" />
                </div>
            </div>

            <hr />
            @if (Model.ParentId == null)
            {
                <a asp-action="Index" class="mr-2">İptal</a>
            }
            else
            {
                <a asp-action="Edit" asp-route-id="@Model.ParentId" class="mr-2">İptal</a>
            }
            <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Kaydet</button>
        </form>
    </div>
</div>

<div class="card card-primary mb-2">
    <div class="card-header d-flex" data-toggle="collapse" data-target="#editFormSubItems">
        <div class="flex-fill">
            <i class="fa fa-list"></i>
            @Model.Name Alt Kategori Listesi
        </div>
        <div>
            <a asp-action="Create" asp-route-parentId="@Model.Id" class="btn btn-link py-1 text-secondary text-decoration-none">
                <i class="fa fa-plus"></i> Yeni Alt Kategori
            </a>
        </div>
    </div>
    <div class="card-body collapse show" id="editFormSubItems">
        <table id="dataTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th style="width: 10%">@Html.DisplayNameFor(_ => _.PictureFile)</th>
                    <th style="width: 40%">@Html.DisplayNameFor(_ => _.Name)</th>
                    <th style="width: 10%">@Html.DisplayNameFor(_ => _.Enabled)</th>
                    <th style="width: 10%">@Html.DisplayNameFor(_ => _.Date)</th>
                    <th style="width: 10%">@Html.DisplayNameFor(_ => _.User.Name)</th>
                    <th style="width: 10%">@Html.DisplayNameFor(_ => _.SortOrder)</th>
                    <th style="width: 10%"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.Children.OrderBy(p => p.SortOrder))
                {
                    <tr>
                        <td>
                            <img id="PictureFilePreview" src="@(category.Picture != null ? category.Picture : "/content/images/no-image-320-240.jpg")" alt="@category.Name" height="64" class="border shadow-sm mb-2" />
                        </td>
                        <td>

                            <ul class="breadcrumb p-0 bg-transparent">
                                @{
                                    var pathNames = category.GetPathItems().ToList();
                                    foreach (var categoryParent in pathNames)
                                    {
                                        if (pathNames.LastOrDefault() == categoryParent)
                                        {
                                            <li class="breadcrumb-item active">
                                                @categoryParent.Name
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="breadcrumb-item">
                                                <a asp-action="Edit" asp-route-id="@categoryParent.Id">@categoryParent.Name</a>
                                            </li>
                                        }
                                    }
                                }
                            </ul>
                        </td>
                        <td>
                            @if (category.Enabled)
                            {
                                <i class="fa fa-check text-success"></i>
                            }
                            else
                            {
                                <i class="fa fa-times text-danger"></i>
                            }
                        </td>
                        <td>
                            @category.Date.ToShortDateString()
                        </td>
                        <td>
                            @category.User.Name
                        </td>
                        <td class="text-center">
                            <a asp-action="MoveUp" asp-route-id="@category.Id" class="text-secondary mr-2">
                                <i class="fa fa-caret-up"></i>
                            </a>
                            <a asp-action="MoveDn" asp-route-id="@category.Id" class="text-secondary mr-2">
                                <i class="fa fa-caret-down"></i>
                            </a>
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@category.Id" class="text-secondary mr-2">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a asp-action="Remove" asp-route-id="@category.Id" data-name="@category.Name" class="text-secondary remove-btn">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
    <partial name="_DataTablesPartial" />
    <script>
            $(() => {
                $('#dataTable').DataTable({
                    "order": [[5, "asc"]]
                });
                $('.remove-btn').on('click', function () {
                    const name = $(this).attr('data-name');
                    const href = $(this).attr('href');
                    removeConfirm.fire({
                        text: name + ' isimli @entityName.ToLower() TAMAMEN silinecektir. Silme işlemine devam etmek istiyormusunuz?'
                    })
                        .then(result => {
                            if (result.value) {
                                window.location = href;
                            }
                        });
                    return false;
                });

                $('#PictureFilePreview').click(function () { $('#PictureFile').click() });

                $('#PictureFile').change(function (e) {
                    var fileReader = new FileReader();
                    fileReader.onload = function () {
                        $('#PictureFilePreview').attr('src', fileReader.result);
                    };
                    fileReader.readAsDataURL(e.target.files[0]);
                });
            });
    </script>
}
