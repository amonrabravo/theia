@model Banner
<div class="form-row">
    <div class="col-12 col-md-6">
        <div class="form-group">
            <label asp-for="Url"></label>
            <input type="text" asp-for="Url" class="form-control" />
            <span asp-validation-for="Url"></span>
        </div>
    </div>
</div>
<div class="form-row">
    <div class="col-12 col-md-3">
        <div class="form-group">
            <label asp-for="DateStart"></label>
            <input type="text" asp-for="DateStart" class="form-control" />
            <span asp-validation-for="DateStart"></span>
        </div>
    </div>
    <div class="col-12 col-md-3">
        <div class="form-group">
            <label asp-for="DateEnd"></label>
            <input type="text" asp-for="DateEnd" class="form-control" />
            <span asp-validation-for="DateEnd"></span>
        </div>
    </div>
</div>
<div class="form-row">
    <div class="col-12 col-md-6">
        <div class="form-group">
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="customCheckEnabled" asp-for="Enabled">
                <label class="custom-control-label" for="customCheckEnabled">Yayınla</label>
            </div>
        </div>
    </div>
</div>
